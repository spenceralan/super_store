<div id="home_index">

  <%= link_to "View All Products", products_path, class: "btn btn-default" %>
  <%= link_to "Add Product", new_product_path, class: "btn btn-default" %>

  <br><br>

  <%= form_tag(search_path, method: :get) do %>
    <div class="form-group">
      <label for="country">Search by Country</label>
      <%= country_select nil, :country, {selected: params[:country]}, class: "form-control" %>
    </div>
    <%= submit_tag("Submit", class: "btn btn-default") %>
  <% end %>

  <h2>Most Recently Added Products:</h2>

  <div class="product">
    <% @recent_products.each do |product| %>
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p>Created: <%= product.created_at.to_s(:long) %></p>
    <% end %>
  </div>

  <h2>Most Reviewed Product:</h2>

  <div class="product">
    <% @most_reviewed.each do |product| %>
      <h3><%= link_to product.name, product_path(product) %></h3>
      <p>Number of Reviews: <%= product.reviews.length %></p>
    <% end %>
  </div>
  
</div>