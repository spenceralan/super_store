<div id="header_partial">
  <div class="jumbotron">
    <div class="container">
      <h1><%= link_to "Super Store", root_path %></h1>

      <%= link_to "View Products", products_path, class: "btn btn-default" %>
      <%= link_to "Add Product", new_product_path, class: "btn btn-default" %>

      <br><br>

      <%= form_tag(search_path, method: :get) do %>
        <div class="form-group">
          <%= country_select nil, :country, {selected: params[:country]}, class: "form-control" %>
        </div>
        <%= submit_tag("Search", class: "btn btn-default") %>
      <% end %>
    </div>
  </div>
</div>