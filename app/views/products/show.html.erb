<div id="product_show">
  <h1><%= @product.name %></h1>
  <h4><%= @product.country %></h4>
  <h4><%= number_to_currency(@product.price) %></h4>
  
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning" %>
  <%= link_to "Delete", product_path(@product), data: {method: :delete}, class: "btn btn-danger" %>
</div>